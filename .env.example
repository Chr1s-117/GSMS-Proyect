# .env.example
# ============================================
# GSMS Backend - Environment Variables Template
# Copy to .env and fill in values
# ============================================

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://gsms_user:PASSWORD@localhost:5432/GSMS_DB

# ============================================
# Server Configuration
# ============================================
# Port for backend API
API_PORT=8101

# UDP receiver port
UDP_PORT=9001

# Disable UDP receiver (set to 1 to disable)
DISABLE_UDP=0

# ============================================
# WebSocket Configuration
# ============================================
# Enable GPS broadcasting (set to 0 to disable)
BROADCASTER_ENABLE=1

# ============================================
# Security (Optional)
# ============================================
# SECRET_KEY=your-secret-key-here

# ============================================
# AWS Configuration (Production only)
# ============================================
# AWS_REGION=us-east-1
# S3_BUCKET=gsms-artifacts-727529936291-use1

# ============================================
# Developer Environment
# ============================================
# DEV_NAME=chris